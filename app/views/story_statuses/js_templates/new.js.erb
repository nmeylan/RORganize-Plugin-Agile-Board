<% if new %>
    jQuery("#status-editor-overlay").replaceWith("<%= escape_javascript status_editor_overlay(@story_status, agile_board_plugin::story_statuses_path(@project.slug),:post) %>");
    createOverlay("#status-editor-overlay", 150);
    jQuery('#status-editor-overlay').overlay().load();
<% else %>
    jQuery('#status-editor-overlay').overlay().close();
    $('.story-statuses-list').append("<%= escape_javascript statuses_list_row(@story_status) %>");
<% end %>