$('#points-tab').replaceWith("<%= escape_javascript points_content(addition) %>");
$('#submit-points-addition').click(function(e){
    e.preventDefault();
    var val = $('#points').val();

    jQuery.ajax({
        url: $(this).data("link"),
        type: 'post',
        dataType: 'script',
        data: {point: val}
    });
});