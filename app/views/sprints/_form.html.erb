<%= render layout: "shared/modal_content", locals: {title: "TODO"} do %>
    <%= rorganize_form_for @sprint, url: agile_board_plugin::project_sprints_path(@project.slug), wrapper: :modal_horizontal_form,
                           html: {class: 'form-horizontal', remote: true, data: {role: "sprint-form"}} do |f| %>

        <%= f.input :version_id, collection: @project.active_versions, input_html: {data: {action: "generate-sprint-name",
                                                                                           remote_url: agile_board_plugin::project_generate_sprint_name_path(@project.slug)},
                                                                                    class: 'chzn-select-deselect  cbb-medium search'},
                    my_wrapper_html: {class: "col-sm-10"}, label_html: {class: "col-sm-2"} %>
        <%= f.input :name, my_wrapper_html: {class: "col-sm-10"}, label_html: {class: "col-sm-2"}, input_html: {data: {role: "sprint-name"}} %>
        <%= f.input :start_date, as: :date, html5: true, my_wrapper_html: {class: "col-sm-10"}, label_html: {class: "col-sm-2"} %>
        <%= f.input :end_date, as: :date, html5: true, my_wrapper_html: {class: "col-sm-10"}, label_html: {class: "col-sm-2"} %>

        <%= render layout: "shared/modal_footer" do %>
            <%= f.button :submit %>
        <% end %>
    <% end %>
<% end %>